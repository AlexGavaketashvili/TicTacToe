<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebackground"
    android:gravity="center"
    tools:context=".GameActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bungee_inline"
            android:gravity="center"
            android:text="Player X"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/bungee_inline"
            android:gravity="center"
            android:text="Player 0"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:textStyle="bold">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:id="@+id/scorex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/chonburi"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="35sp">

        </TextView>

        <TextView
            android:id="@+id/score0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/chonburi"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="35sp">

        </TextView>


    </LinearLayout>


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_margin="2dp"
            android:backgroundTint="@color/BLACK"
            android:tag="0"
            android:textColor="@color/white"
            android:textSize="40sp"
            tools:text="0">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_margin="2dp"
            android:backgroundTint="@color/BLACK"
            android:tag="1"
            android:textColor="@color/white"
            android:textSize="40sp"
            tools:text="1">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_margin="2dp"
            android:backgroundTint="@color/BLACK"
            android:tag="2"
            android:textColor="@color/white"
            android:textSize="40sp"
            tools:text="2">

        </androidx.appcompat.widget.AppCompatButton>


    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_margin="2dp"
            android:backgroundTint="@color/BLACK"
            android:tag="3"
            android:textColor="@color/white"
            android:textSize="40sp"
            tools:text="3">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_margin="2dp"
            android:backgroundTint="@color/BLACK"
            android:tag="4"
            android:textColor="@color/white"
            android:textSize="40sp"
            tools:text="4">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_margin="2dp"
            android:backgroundTint="@color/BLACK"
            android:tag="5"
            android:textColor="@color/white"
            android:textSize="40sp"
            tools:text="5">

        </androidx.appcompat.widget.AppCompatButton>


    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_margin="2dp"
            android:backgroundTint="@color/BLACK"
            android:tag="6"
            android:textColor="@color/white"
            android:textSize="40sp"
            tools:text="6">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_margin="2dp"
            android:backgroundTint="@color/BLACK"
            android:tag="7"
            android:textColor="@color/white"
            android:textSize="40sp"
            tools:text="7">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn9"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_margin="2dp"
            android:backgroundTint="@color/BLACK"
            android:tag="8"
            android:textColor="@color/white"
            android:textSize="40sp"
            tools:text="8">

        </androidx.appcompat.widget.AppCompatButton>


    </TableRow>


    <TextView
        android:id="@+id/rigi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/staatliches"
        android:gravity="center"
        android:text="Please start game"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp">

    </TextView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/leftbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="@color/BLACK"
        android:fontFamily="@font/archivo_black"
        android:text="LEAVE"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold">

    </androidx.appcompat.widget.AppCompatButton>


</TableLayout>

